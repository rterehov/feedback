<div class="jumbotron">
<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>
  <div><%= f.password_field :password, :placeholder => "пароль"  %></div>
  <div><%= f.password_field :password_confirmation, :placeholder => "подтвердите пароль" %></div>

  <div><%= f.submit "Зарегистрироваться", :class => "btn btn-success"  %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
