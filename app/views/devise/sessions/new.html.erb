<div class="jumbotron">
<h2>Выполните вход или зарегистрируйтесь</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>
  <div><%= f.password_field :password, :placeholder => "Пароль" %></div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Входить автоматически</div>
  <% end -%>
  <div><%= f.submit "Войти", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
