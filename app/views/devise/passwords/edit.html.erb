<div class="jumbotron">
<h2>Изменение пароля</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= render :partial => "layouts/devise_errors" %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.password_field :password, :autofocus => true, :placeholder => "Новый пароль" %></div>
  <div><%= f.password_field :password_confirmation, :placeholder => "Подтверждение пароля" %></div>

  <div><%= f.submit "Поменять", :class => "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
