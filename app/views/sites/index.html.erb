<h3>Мои сайты</h3>

<% unless @sites.empty? %>
<%= will_paginate @sites %>
<% end %>

<table class="table">
  <tr>
    <th>Сайт</th>
    <th>Email администратора</th>
    <th>Операции</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.domain %></td>
    <td><%= site.email %></td>
    <td><%= link_to 'Просмотр', site %> | <%= link_to 'Редактирование', edit_site_path(site) %> | <%= link_to 'Удалить', site, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

<% unless @sites.empty? %>
<br>
<%= will_paginate @sites %>
<br>
<% end %>
<%= link_to 'Добавить сайт', new_site_path, :class => "btn btn-primary"  %>

