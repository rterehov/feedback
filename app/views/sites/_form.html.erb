<% email ||= nil %>
<%= form_for(@site) do |f| %>
  <%= render :partial => "layouts/form_errors", :locals => {:item => @site} %>
  
  <div class="field">
    <label>Домен</label>
    <%= f.text_field :domain, :placeholder => "example.com" %>
  </div>
  <div class="field">
    <label>Email администратора</label>
    <%= f.text_field :email, :placeholder => "admin@example.com", :value => email ? email : @site.email  %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить", :class => "btn btn-success" %>
  </div>
<% end %>
